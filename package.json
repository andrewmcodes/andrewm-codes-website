{
  "name": "andrewm.codes",
  "version": "1.0.0",
  "private": "true",
  "description": "Andrew Mason's Personal Website w/ BridgetownRB, Tailwind CSS, and Snowpack",
  "homepage": "https://andrewm.codes",
  "repository": "https://github.com/andrewmcodes/andrewm-codes-website.git",
  "license": "MIT",
  "author": "Andrew Mason <andrewmcodes@protonmail.com>",
  "scripts": {
    "dev:frontend": "snowpack build --watch",
    "build:frontend": "snowpack build",
    "prettier:format": "prettier-standard --format",
    "prettier:check": "prettier-standard --check",
    "prettier:lint": "prettier-standard --lint '**/*.{js,css}'",
    "build:src": "bundle exec bridgetown build",
    "dev:src": "sleep 1; bundle exec bridgetown build --watch",
    "dev:serve": "bundle exec bridgetown serve --livereload",
    "clean": "bundle exec bridgetown clean",
    "deploy": "yarn clean && BRIDGETOWN_ENV=production yarn build:src && yarn sitemap && NODE_ENV=production yarn build:frontend",
    "start": "NODE_ENV=development concurrently \"yarn dev:frontend\" \"yarn dev:serve\"",
    "sitemap": "sitemap-static --prefix=https://andrewm.codes output/ > public/sitemap.xml",
    "sync": "browser-sync start --port 4000 --proxy 'localhost:4001' --serveStatic 'output' --files 'output' --no-open --ws --no-notify"
  },
  "devDependencies": {
    "@snowpack/plugin-optimize": "^0.2.9",
    "@tailwindcss/typography": "^0.3.1",
    "autoprefixer": "^10.0.2",
    "browser-sync": "^2.26.13",
    "concurrently": "^5.2.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-optipng": "^8.0.0",
    "onchange": "^7.1.0",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "prettier-standard": "^16.4.1",
    "sitemap-static": "^0.4.4",
    "snowpack": "^2.17.1",
    "snowpack-plugin-imagemin": "^1.0.0",
    "tailwindcss": "^2.0.1"
  }
}
