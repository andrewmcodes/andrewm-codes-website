{
  "name": "digital-garden",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "bin/bridgetown clean",
    "dev": "NODE_ENV=development BRIDGETOWN_ENV=development run-s dev:*",
    "dev:snowpack": "snowpack dev",
    "build": "NODE_ENV=production BRIDGETOWN_ENV=production run-s build:snowpack",
    "build:snowpack": "snowpack build",
    "build:sw": "workbox generateSW",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .js frontend/",
    "lint:stylelint": "stylelint frontend/**/*.css",
    "format": "run-s format:*",
    "format:eslint": "eslint --ext .js frontend/ --fix",
    "format:stylelint": "stylelint frontend/**/*.css --fix",
    "format:prettier": "prettier --write .",
    "validate": "run-s build lint",
    "setup": "yarn && yarn run validate",
    "start": "yarn dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@prettier/plugin-ruby": "^1.5.1",
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-postcss": "^1.1.0",
    "@snowpack/plugin-run-script": "^2.3.0",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/line-clamp": "^0.2.0",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.4",
    "babel-eslint": "^10.1.0",
    "browserslist": "^4.16.3",
    "cssnano": "^4.1.10",
    "esinstall": "^1.0.5",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "snowpack": "^3.0.11",
    "snowpack-plugin-minify-html": "^0.1.1",
    "stylelint": "^13.9.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^1.0.0",
    "tailwindcss": "^2.0.2",
    "tailwindcss-debug-screens": "^2.0.0",
    "tailwindcss-line-clamp": "^1.0.5",
    "vercel": "^21.2.3",
    "workbox-cli": "^6.1.0"
  },
  "dependencies": {
    "@hotwired/turbo": "^7.0.0-beta.4",
    "alpine-turbo-drive-adapter": "^1.0.1",
    "alpinejs": "^2.8.0"
