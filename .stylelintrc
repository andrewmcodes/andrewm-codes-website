{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "no-descending-specificity": null,
    "selector-type-no-unknown": null,
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true,
    "at-rule-no-unknown": [
      true,
      {
      ignoreAtRules: [
        'apply',
        'layer',
        'responsive',
        'screen',
        'tailwind',
        'variants'
        ]
      }
    ]
  }
}
