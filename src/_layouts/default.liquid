<!doctype html>
<html lang="en">
  {%- if bridgetown.environment != "production" -%}
    {%- assign debug = true -%}
  {%- endif -%}
  {% render "base/head", metadata: site.metadata, title: page.title, root_url: site.url %}
  <body class="{% class_map debug-screens: debug, page_class: true %}">
    <div class="flex flex-col min-h-screen mx-auto font-sans antialiased">
      {% render "base/navbar", metadata: site.metadata, page: page %}
      <main class="flex-1">
        {{ content }}
      </main>
      {%- render "base/footer", metadata: site.metadata -%}
      <script type="module" src="{{ site.url }}/_bridgetown/javascript/index.js" defer></script>
<script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.0.0-beta.24/dist/shoelace/shoelace.esm.js"></script>
    </div>
  </body>
</html>
