---
layout: default
---

<div class="px-4 py-32 lg:px-0">
  <div class="flex flex-col max-w-screen-md mx-auto justify-content">
    <div class="flex flex-col space-y-14">
      <div class="flex flex-col space-y-4">
        <h1>{{ page.title }}</h1>
        <p class="p-small">
          {{ page.date | date_to_string: "ordinal", "US" }} /
          Reading Time: {{ page.content | reading_time: 1 }}
        </p>
        <a class="text-blue-600 dark:text-blue-500" href="https://twitter.com/intent/tweet/?text=Great%20post%20by%20@andrewmcodes%20{{ page.canonical_url }}">
         🐣 Share via Twitter
       </a>
      </div>
      {% render "prose", content: page.content %}
      {%- render "newsletter" -%}
    </div>
  </div>
</div>
