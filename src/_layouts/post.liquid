---
layout: default
---

{% render "data_display/breadcrumb", page: page %}
{% rendercontent "wrapper/content" %}
  {% with emoji %}📝{% endwith %}
  {% with details %}
    {% rendercontent "data_display/description_list", title: "🏷 Tags" %}
      <div class="flex">
        {% for tag in page.tags %}
          {%- assign relative_path = "/tags/" | append: tag -%}
          {% render "data_display/badge", color: "blue", text: tag, href: relative_path %}
        {% endfor %}
      </div>
    {% endrendercontent %}
    {% rendercontent "data_display/description_list", title: "📅 Published" %}
      {{ page.date | date: "%B %d, %Y" }}
    {% endrendercontent %}
  {% endwith %}
  {% with title %}{{ page.title }}{% endwith %}
  {% with text %}{{ content }}{% endwith %}
{% endrendercontent %}
