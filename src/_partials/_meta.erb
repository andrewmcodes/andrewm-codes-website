<%# SEO meta %>
<%= render "seo", title: title(page), description: description(page), meta: site.metadata %>
<link rel="canonical" href="<%= absolute_url page %>">

<%# Favicon %>
<link rel="icon" href="<%= absolute_url 'favicon.ico' %>">
<link rel="icon" href="<%= absolute_url 'images/icon.svg' %>" type="image/svg+xml">
<link rel="apple-touch-icon" href="<%= absolute_url 'images/apple-touch-icon.png' %>">
<link rel="manifest" href="<%= absolute_url 'site.webmanifest' %>">
<meta name="theme-color" content="<%= site.metadata.theme_color %>">

<%# RSS Feed %>
<link rel="alternate" href="<%= absolute_url('feed.xml') %>" type="application/atom+xml" title="<%= site.metadata.title %>">

<%# Indie Auth & Microsub %>
<link rel="authorization_endpoint" href="https://indieauth.com/auth" />
<link rel="token_endpoint" href="https://tokens.indieauth.com/token" />
