<%# SEO %>
<meta name="title" content="<%= title %>">
<meta name="description" content="<%= description %>">
<meta name="image" content="<%= page.data.image %>">

<%# Open Graph %>
<meta property="og:url" content="<%= absolute_url '/' %>">
<meta property="og:title" content="<%= title %>">
<meta property="og:description" content="<%= description %>">
<meta property="og:image" content="<%= page.data.image %>">

<%# Twitter %>
<meta property="twitter:card" content="summary_large_image">
<meta name="twitter:creator" content="<%= meta.author.social.twitter.name %>">
<meta name="twitter:site" content="<%= meta.author.social.twitter.name %>">

<% if page.data.layout == "post" %>
  <meta property="og:type" content="article">
  <% if page.data.published_at %>
    <meta property="article:published_time" content="<%= date_to_xmlschema page.data.published_at %>">
  <% end %>
<% end %>

<%# General %>
<meta name="author" content="<%= meta.author.name %>">
<meta name="og:site_name" content="<%= meta.title %>">
<meta name="og:locale" content="<%= meta.locale %>">
<meta name="generator" content="Bridgetown">

<script type="application/ld+json">
{
    "name":"<%= meta.author.name %>",
    "description":"<%= meta.description %>",
    "author": {
        "@type":"Person",
        "name":"<%= meta.author.name %>"
    },
    "@type":"WebSite",
    "url":"<%= meta.url %>",
    "image":"<%= meta.author.avatar %>",
    "headline":"<%= meta.title %>",
    "sameAs":[
        "<%= meta.author.social.twitter.url %>",
        "<%= meta.author.social.github.url %>"
    ],
    "@context":"http://schema.org"
}
</script>
