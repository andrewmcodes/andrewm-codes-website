<div class="fixed z-10 w-full lg:relative">
  <nav
    class="flex flex-wrap items-center justify-between p-4 bg-gray-1000"
    data-controller="reveal"
  >
    <div class="flex items-center flex-shrink-0">
      <a class="font-mono text-2xl font-bold no-underline text-gray-50 hover:no-underline" href="/"> andrew_mason </a>
    </div>
    <button
      data-action='click->reveal#toggle touch->reveal#toggle reveal:click:outside->reveal#toggle reveal:touch:outside->reveal#toggle'
      type="button"
      class="block px-2 text-gray-50 lg:hidden focus:outline-none focus:text-gray-50"
    >
      <span class="sr-only">Menu Toggle</span>
      <svg class="w-6 h-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path
          class="hidden"
          data-reveal-target='item'
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
        />
        <path
          data-reveal-target='item'
          fill-rule="evenodd"
          d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
        />
      </svg>
    </button>
    <div
      class="flex-grow hidden w-full lg:flex lg:items-center lg:w-auto"
      data-reveal-target='item'
    >
      <ul class="items-center justify-end flex-1 pt-6 lg:pt-0 list-reset lg:flex">
        <% links.each do |link| %>
        <li class="lg:ml-3">
          <a
            class="inline-block px-4 py-2 font-semibold no-underline text-gray-50"
            href="<%= link.url %>"
          >
            <%= link.name.downcase %>
          </a>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
