---
name: Head
description: The <head /> of the site with scripts and metadata.
---
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no">
  {% seo %}
  <meta name="keywords" content="ruby, ruby on rails, tailwind css, bridgetown">
  <meta name="robots" content="index, follow">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="language" content="English">
  <meta name="author" content="Andrew Mason">
  <meta name="rating" content="general">
  <meta name="generator" content="Bridgetown">
  <meta name="copyright" content="Andrew Mason">

  <!-- Icons -->
  <link href="/apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180">
  <link href="/favicon-32x32.png" rel="icon" sizes="32x32" type="image/png">
  <link href="/favicon-16x16.png" rel="icon" sizes="16x16" type="image/png">

  <!-- Manifest -->
  <link href="/site.webmanifest" rel="manifest">

  <!-- Feed -->
  {% feed_meta %}

  <!-- Webmentions -->
  <link href="https://webmention.io/andrewm.codes/webmention" rel="webmention"/>
  <link href="https://webmention.io/andrewm.codes/xmlrpc" rel="pingback"/>

  <!-- Snowpack -->
  <link href="/__snowpack__/env.js" rel="modulepreload">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="{{ "/_bridgetown/styles/index.css" | preprend: site_url }}">
  <link rel="stylesheet" href="{{ "/_bridgetown/styles/syntax.css" | preprend: site_url }}">

  <!-- Fonts -->
  <link as="style" href="https://rsms.me/inter/inter.css" rel="preload"/>
  {%- if url == "/projects/" -%}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.0.0-beta.24/dist/shoelace/shoelace.css">
  {%- endif -%}
  <link href="https://rsms.me/inter/inter.css" media="print" onload="this.media='all'; this.onload=null;" rel="stylesheet"/>

  <!-- Analytics -->
  {% plausible %}
</head>
