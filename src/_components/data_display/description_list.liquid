---
name: Description List
variables:
  title:
    - string
  content?:
    - string
  value?:
    - string
---

<div class="mt-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
  <dt class="text-sm font-medium leading-5 text-gray-500">
    {{ title }}
  </dt>
  <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
    {%- if value -%}
      {{ value }}
    {%- else -%}
      {{ content }}
    {%- endif -%}
  </dd>
</div>
