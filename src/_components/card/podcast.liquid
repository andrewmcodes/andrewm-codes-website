---
name: Podcast Card
description: A podcast card component
---

{% assign status = podcast.status %}
{% case status %}
{% when 'active' %}
{% assign status_color = "bg-green-400" %}
{% when 'retired' %}
{% assign status_color = "bg-orange-500" %}
{% when 'ended' %}
{% assign status_color = "bg-pink-600" %}
{% else %}
{% assign status_color = "bg-gray-400" %}
{% endcase %}

<div class="py-6 border-t border-gray-400 sm:py-8 lg:py-10">
  <div class="items-center justify-between lg:flex">
    <h3 class="text-gray-900 sm:text-lg lg:text-xl">
      <a class="flex items-center hover:underline" href="{{ podcast.link }}" target="_blank" rel="noreferrer noopener">
        <div class="flex-shrink-0 w-2.5 h-2.5 rounded-full {{ status_color }} mr-2"></div>
        {{ podcast.name }}
      </a>
    </h3>
    <div class="flex flex-wrap mt-2 text-sm text-gray-900 sm:text-base lg:text-lg sm:mt-3 lg:mt-0">
      <div class="lg:ml-8">
        <a class="flex items-center group" href="{{ podcast.link }}" target="_blank" rel="noreferrer noopener">
          {% svg images/podcast.svg width=24 class="w-6 h-6" %}
          <div class="mt-px ml-2 lg:hidden">View this podcast</div>
        </a>
      </div>
    </div>
  </div>
</div>
